type Category {
  id: ID
  name: String!
  description: String!
  movies: [Movie!]!
}

type Movie {
id: ID
name: String!
year: Int!
category: Category!
}

input NewCategory {
  name: String!
  description: String!
}

input NewMovie {
  name: String!
  description: String!
  year: Int!
  categoryId: ID!
}

type Query {
  categories: [Category!]!
  movies: [Movie!]!
}

type Mutation {
  createCategory(input: NewCategory!): Category!
  createMovie(input: NewMovie!): Movie!
}
